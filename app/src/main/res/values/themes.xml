<resources>
    <!-- Base application theme. -->
    <style name="Theme.JokenpoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JokenpoApp.NoActionBar">
        <!-- Habilita ou não a action bar do tema do app -->
        <item name="windowActionBar">false</item>
        <!-- Habilita ou não o titulo do app na action bar -->
        <item name="windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/menuItem</item>
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>