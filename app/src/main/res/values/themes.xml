<resources>
    <!-- Base application theme. -->
    <style name="Theme.JokenpoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_200</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JokenpoApp.NoActionBar">
        <!-- Habilita ou não a action bar do tema do app -->
        <item name="windowActionBar">false</item>
        <!-- Habilita ou não o titulo do app na action bar -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:itemTextAppearance">@style/menuItem</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/spinnerItemStyle</item>
        <item name="spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="spinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavigationViewTextStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
    </style>
</resources>